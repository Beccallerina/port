{
  "name": "port",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^13.5.0",
    "@types/jest": "^27.5.2",
    "@types/node": "^16.11.59",
    "@types/react": "^18.0.21",
    "@types/react-dom": "^18.0.6",
    "lodash": "^4.17.21",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-scripts": "5.0.1",
    "typescript": "^4.4.3",
    "web-vitals": "^2.1.4"
  },
  "scripts": {
    "dev:fix": "ts-standard --env jest --fix",
    "dev:build": "react-scripts build",
    "dev:start": "react-scripts start",
    "dev:test": "react-scripts test",
    "prod:fix": "run-s dev:fix",
    "prod:css": "NODE_ENV=production tailwindcss build -i ./src/framework/styles.css -o ./dist/styles.css --minify",
    "prod:build": "tsc -d --project tsconfig.prod.json",
    "prod:assets": "cp -R ./src/assets ./dist/assets",
    "prod": "run-s prod:fix prod:build prod:assets prod:css",
    "ci:fix": "run-s dev:fix",
    "ci:test": "CI=true react-scripts test"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@types/lodash": "^4.14.185",
    "autoprefixer": "^10.4.12",
    "husky": "^8.0.1",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.16",
    "tailwindcss": "^3.1.8",
    "ts-standard": "^11.0.0"
  },
  "ts-standard": {
    "project": "./tsconfig.json",
    "ignore": [
      "dist",
      "src/framework/processing/python/worker.js"
    ]
  }
}
